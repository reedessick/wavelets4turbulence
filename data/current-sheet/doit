#!/bin/bash

# a simple script to store command lines
# Reed Essick (reed.essick@gmail.com)

#-------------------------------------------------

data="b_field-wavelet_turbulence-2025-02-22.npy"

thr2d=2.0 # used for denoising
thr1d=1.0 # used for denoising

#-------------------------------------------------

for wavelet in "db1"
do

    ### 2D ANALYSIS

    # regular decomposition

#    echo \
    ./analyze-2d \
        $data \
        --wavelet $wavelet \
        --Verbose \
        --output-dir $wavelet \
        --tag $wavelet \
    || exit 1

    # denoise

#    echo \
    ./analyze-2d \
        $data \
        --wavelet $wavelet \
        --denoise $thr2d \
        --Verbose \
        --output-dir $wavelet \
        --tag ${wavelet}_dn${thr2d} \
    || exit 1

    # smooth

#    echo \
    ./analyze-2d \
        $data \
        --wavelet $wavelet \
        --denoise $thr2d \
        --smooth \
        --Verbose \
        --output-dir $wavelet \
        --tag ${wavelet}_dn${thr2d}_smooth \
    || exit 1

    #--------------------

    ### 1D ANALYSIS

    # regular decomposition

#    echo \
    ./analyze-1d \
        $data \
        --wavelet $wavelet \
        --Verbose \
        --output-dir $wavelet \
        --tag $wavelet \
    || exit 1

#    echo \
    ./analyze-1d \
        $data \
        --wavelet $wavelet \
        --denoise-1d $thr1d \
        --Verbose \
        --output-dir $wavelet \
        --tag ${wavelet}_dn1d${thr1d} \
    || exit 1

#    echo \
    ./analyze-1d \
        $data \
        --wavelet $wavelet \
        --denoise-1d $thr1d \
        --smooth-1d \
        --Verbose \
        --output-dir $wavelet \
        --tag ${wavelet}_dn1d${thr1d}_smooth \
    || exit 1

    #---

    # denoise

#    echo \
    ./analyze-1d \
        $data \
        --wavelet $wavelet \
        --denoise-2d $thr2d \
        --Verbose \
        --output-dir $wavelet \
        --tag ${wavelet}_dn2d${thr2d} \
    || exit 1

#    echo \
    ./analyze-1d \
        $data \
        --wavelet $wavelet \
        --denoise-2d $thr2d \
        --denoise-1d $thr1d \
        --Verbose \
        --output-dir $wavelet \
        --tag ${wavelet}_dn2d${thr2d}_dn1d${thr1d} \
    || exit 1

#    echo \
    ./analyze-1d \
        $data \
        --wavelet $wavelet \
        --denoise-2d $thr2d \
        --denoise-1d $thr1d \
        --smooth-1d \
        --Verbose \
        --output-dir $wavelet \
        --tag ${wavelet}_dn2d${thr2d}_dn1d${thr1d}_smooth \
    || exit 1

    #---

    # smooth

#    echo \
    ./analyze-1d \
        $data \
        --wavelet $wavelet \
        --denoise-2d $thr2d \
        --smooth-2d \
        --Verbose \
        --output-dir $wavelet \
        --tag ${wavelet}_dn2d${thr2d}_smooth \
    || exit 1

#    echo \
    ./analyze-1d \
        $data \
        --wavelet $wavelet \
        --denoise-2d $thr2d \
        --smooth-2d \
        --denoise-1d $thr1d \
        --Verbose \
        --output-dir $wavelet \
        --tag ${wavelet}_dn2d${thr2d}_smooth_dn1d${thr1d} \
    || exit 1

#    echo \
    ./analyze-1d \
        $data \
        --wavelet $wavelet \
        --denoise-2d $thr2d \
        --smooth-2d \
        --denoise-1d $thr1d \
        --smooth-1d \
        --Verbose \
        --output-dir $wavelet \
        --tag ${wavelet}_dn2d${thr2d}_smooth_dn1d${thr1d}_smooth \
    || exit 1

done

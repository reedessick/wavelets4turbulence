#!/bin/bash

# a simple script to store command lines
# Reed Essick (reed.essick@gmail.com)

#-------------------------------------------------

data="b_field-wavelet_turbulence-2025-02-22.npy"

thr2d=5.0 # used for denoising
max_scale=64

#-------------------------------------------------

ARGS="--figtype png --dpi 500"

#-------------------------------------------------

for wavelet in "db1"
do

#    echo \
#    python -i \
    ./magic \
        $data \
        --wavelet $wavelet \
        --denoise $thr2d \
        --max-scale $max_scale \
        --Verbose \
        --output-dir $wavelet \
        --tag $wavelet \
        $ARGS \
    || exit 1

done
